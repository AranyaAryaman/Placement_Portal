<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_checkout_the_portal"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#ff00"
            android:textSize="20dp"
            android:text="If you click this button, placement sessoin will come to an end.Every student will be notified for the same......"
            android:ems="20"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:onClick="the_checkout"
        android:layout_height="200dp"
        android:id="@+id/check_out_button_pp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:elevation="150dp"
        app:cardBackgroundColor="#D3D3D3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout the Placement Portal"
                android:textSize="20dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

