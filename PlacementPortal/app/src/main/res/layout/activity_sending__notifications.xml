<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sending_Notifications">

    <EditText
        android:id="@+id/subject"
        android:layout_width="177dp"
        android:hint="Subject"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="295dp" />

    <EditText
        android:hint="Description"
        android:id="@+id/description"
        android:layout_width="361dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/subject"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-96dp"
        android:layout_marginBottom="410dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/buttonSelectFile"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextFileName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="8dp"
        android:text="SELECT FILE"
        app:layout_constraintBottom_toTopOf="@+id/editTextFileName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="405dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="0dp"
        android:text="Upload File and Send Notifications" />

</RelativeLayout>