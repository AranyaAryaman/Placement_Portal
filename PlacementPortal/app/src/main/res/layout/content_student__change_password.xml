<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Student_ChangePassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/editCurrPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Enter Current Password"
                android:textColor="@color/colorText"
                android:inputType="textPassword"
                app:layout_constraintBottom_toTopOf="@+id/editNewPass2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editCurrPass"
                tools:textColorHint="@color/colorTextHint"
                android:background="@drawable/input"/>

            <EditText
                android:id="@+id/editNewPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Enter New Password"
                android:textColor="@color/colorText"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:textColorHint="@color/colorTextHint"
                android:background="@drawable/input"/>

            <EditText
                android:id="@+id/editNewPass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:hint="Confirm New Password"
                android:textColor="@color/colorText"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="@+id/editNewPass2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:textColorHint="@color/colorTextHint"
                android:background="@drawable/input"/>

            <Button
                android:id="@+id/btn_Change_Pass"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:text="Change"
                android:background="@drawable/roundbtn"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.619" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>