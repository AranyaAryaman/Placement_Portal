                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="30dp"
                    android:text="JOB REQUIREMENTS"
                    app:layout_constraintEnd_toStartOf="@+id/job_requirements"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/job_profile" />

                <TextView
                    android:id="@+id/job_requirements"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="264dp"
                    tools:layout_editor_absoluteY="62dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="SALARY"
                    app:layout_constraintEnd_toStartOf="@+id/salary"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="103dp" />

                <TextView
                    android:id="@+id/salary"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="264dp"
                    tools:layout_editor_absoluteY="62dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:text="BROCHURE"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="67dp"
                    tools:layout_editor_absoluteY="138dp" />

                <TextView
                    android:id="@+id/brochure"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="264dp"
                    tools:layout_editor_absoluteY="135dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:text="CUTOFF CPI"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="172dp" />

                <TextView
                    android:id="@+id/cutoff_cpi"
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    tools:layout_editor_absoluteX="268dp"
                    tools:layout_editor_absoluteY="170dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
