<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Student_View_Profile"
    tools:showIn="@layout/app_bar_student__view__profile"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Academic Details"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/acad_details_header"
            />

        <com.group6.placementportal.MyExpandableListView
            android:id="@+id/edu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"></com.group6.placementportal.MyExpandableListView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/personal_details_header"
            />

        <com.group6.placementportal.MyExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pd"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            ></com.group6.placementportal.MyExpandableListView>

    </LinearLayout>

</ScrollView>