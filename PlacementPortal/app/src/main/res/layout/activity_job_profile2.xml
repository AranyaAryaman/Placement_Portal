<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".job_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="360dp"
                android:layout_height="46dp"
                android:layout_marginTop="90dp"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="CPI Cutoff"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="66dp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/branch"
                        android:layout_width="236dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/input"
                        android:hint="Branches"
                        android:textAlignment="viewStart"
                        android:textColorHint="@color/colorTextHint"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="134dp" />

                    <Button
                        android:id="@+id/branch_button"
                        android:layout_width="107dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="17dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/roundbtn"
                        android:text="select branch"
                        android:textColor="#ffffff"
                        android:textSize="13.8sp"
                        tools:layout_editor_absoluteX="282dp"
                        tools:layout_editor_absoluteY="133dp" />
                </LinearLayout>
            </ScrollView>

            <EditText
                android:id="@+id/profile"
                android:layout_width="360dp"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Profile"
                android:layout_gravity="center"
                android:inputType="text"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="203dp" />

            <EditText
                android:id="@+id/ctc"
                android:layout_width="360dp"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="CTC(in lac Rs.)"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="264dp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="360dp"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Location"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:inputType="text"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="332dp" />
                
             <EditText
                android:id="@+id/job_requirements"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Job Requirements"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/remove" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="236dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/input"
                        android:text="Brochure"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:textAlignment="gravity"
                        android:textColorHint="@color/colorTextHint"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="400dp" />

                    <Button
                        android:id="@+id/select"
                        android:layout_width="107dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="17dp"
                        android:background="@drawable/roundbtn"
                        android:text="select file"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="282dp"
                        tools:layout_editor_absoluteY="400dp" />
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="236dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:background="@drawable/input"
                        android:text="No file selected"
                        android:textSize="16sp"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/colorTextHint"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="469dp" />

                    <Button
                        android:id="@+id/upload"
                        android:layout_width="107dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="17dp"
                        android:background="@drawable/roundbtn"
                        android:text="upload"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="282dp"
                        tools:layout_editor_absoluteY="469dp" />

                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/remove"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:text="remove upload"
                android:background="@drawable/roundbtn"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="525dp" />



            <Button
                android:id="@+id/add"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=" add another profile"
                android:background="@drawable/roundbtn"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="577dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:background="@drawable/roundbtn"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="637dp" />

        </LinearLayout>
    </ScrollView>

   

</android.support.constraint.ConstraintLayout>