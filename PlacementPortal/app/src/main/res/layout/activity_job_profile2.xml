<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".job_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profile"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Profile"
                android:inputType="text"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="264dp" />

            <EditText
                android:id="@+id/ctc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="CTC(in lac Rs.)"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="264dp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Location"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:inputType="text"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="332dp" />

            <EditText
                android:id="@+id/job_requirements"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Job Requirements"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorTextHint"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/remove" />

            <EditText
                android:id="@+id/cpi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="CPI Cutoff"
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="66dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/branch"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:background="@drawable/input"
                    android:hint="Branches"
                    android:paddingStart="10dp"
                    android:paddingLeft="10sp"
                    android:paddingEnd="10sp"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/colorTextHint"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="134dp" />

                <Button
                    android:id="@+id/branch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="17dp"
                    android:paddingVertical="4dp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:background="@drawable/roundbtn"
                    android:text="select branch"
                    android:textColor="#ffffff"
                    android:textSize="13.8sp"
                    tools:layout_editor_absoluteX="282dp"
                    tools:layout_editor_absoluteY="133dp" />
            </LinearLayout>



            <TextView
                android:id="@+id/status"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/input"
                android:text="No file selected"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorTextHint"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="469dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="55dp"
                    android:paddingEnd="10sp"
                    android:paddingStart="10sp"
                    android:background="@drawable/roundbtn"
                    android:text="select file"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="282dp"
                    tools:layout_editor_absoluteY="400dp" />

                <Button
                    android:id="@+id/upload"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="50dp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:background="@drawable/roundbtn"
                    android:text="upload"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="282dp"
                    tools:layout_editor_absoluteY="469dp" />

            </LinearLayout>


            <Button
                android:id="@+id/submit"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:background="@drawable/roundbtn"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="637dp" />

            <Button
                android:id="@+id/remove"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:text="remove upload"
                android:background="@drawable/roundbtn"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:visibility="invisible"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="525dp" />

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>