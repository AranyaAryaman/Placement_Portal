    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan">
        <activity android:name=".notification_list"></activity>
        <activity android:name=".admin_send_notification" />
        <activity android:name=".Sending_Notifications" />
        <activity android:name=".LoginPage" />
        <activity android:name=".job_list" />
        <activity
            android:name=".company_enrollments"
            android:label="@string/title_activity_company_enrollments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".recipients_tab"
            android:label="@string/title_activity_recipients_tab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".admin_notices"
            android:label="@string/title_activity_admin_notices"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".company_notices"
            android:label="@string/title_activity_company_notices"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".company_profile"
            android:label="@string/title_activity_company_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Student_ChangePassword"
            android:label="@string/title_activity_student__change_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Apply_For_Jobs"
            android:label="@string/title_activity_apply__for__jobs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Student_Notifications"
            android:label="@string/title_activity_student__notifications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View_Jobs"
            android:label="@string/title_activity_view__jobs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Student_Profile"
            android:label="@string/title_activity_student__profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Student_Dashboard"
            android:label="@string/title_activity_student__dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.microsoft.identity.client.BrowserTabActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Add in your scheme/host from registered redirect URI -->
                <!-- By default, the scheme should be similar to 'msal[appId]' -->
                <data
                    android:host="auth"
                    android:scheme="msalee86c0ea-3976-49d4-a7d5-87368851d7bc" />
            </intent-filter>
        </activity>

        <service
            android:name=".Student_Foreground_Notifications"
            android:exported="false" />

        <activity android:name=".company_dashboard" />
        <activity android:name=".job_profile" />
        <activity android:name=".company_login" />
    </application>

</manifest>